{# templates/shop/index.html.twig - simplified, no login links #}
{% extends 'base.html.twig' %}

{% block title %}Darbouka Shop{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark shadow-sm fixed-top">
    <div class="container">
        <a class="navbar-brand fw-bold" href="{{ path('app_home') }}">üß≠ Darbouka Shop</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</nav>
<div class="container mt-5">
    <h1 class="text-center mb-5" style="color:#00d2ff;">
        üéµ Welcome to Darbouka Shop
    </h1>

    {# Simple top-right place for account/cart without calling routes #}
    <div class="text-end mb-4">
        <span class="me-2">üõçÔ∏è Shop</span>
        <span class="me-2">|</span>
        <span class="me-2">Cart (0)</span>
    </div>

    <div class="row">
        {% for product in products %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 text-center shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-box-seam entity-icon mb-3"></i>
                        <h5 class="card-title">{{ product.libelle }}</h5>

                        <p class="card-text">
                            {{ product.description|default('No description available')|length > 100 
                                ? product.description|slice(0, 100) ~ '...' 
                                : product.description }}
                        </p>

                        <h4 class="text-info">{{ product.price }} TND</h4>
                    </div>
                    <form method="post" action="{{ path('front_cart_add', {'id': product.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('basket_add' ~ product.id) }}">
                        <button class="btn btn-info w-100">Add to Cart <i class="bi bi-cart-plus"></i></button>
                    </form>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center">
                <p>No products available yet.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
