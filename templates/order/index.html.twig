{% extends 'base.html.twig' %}

{% block title %}Orders{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Orders</h1>

    <div class="text-end mb-3">
        <a href="{{ path('app_order_new') }}" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Create New Order
        </a>
    </div>

    {% if orders is empty %}
        <p class="text-center text-muted">No orders found.</p>
    {% else %}
        <div class="row g-4">
            {% for order in orders %}
            <div class="col-md-4">
                <div class="card p-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="card-title">Order #{{ order.id }}</h5>
                        <span class="badge bg-primary">User ID: {{ order.user.id }}</span>
                    </div>
                    <p><strong>User:</strong> {{ order.user.firstName }} {{ order.user.lastName }}</p>
                    <p><strong>Products:</strong> 
                        {% if order.products|length > 0 %}
                            {% for product in order.products %}
                                {{ product.libelle }}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        {% else %}
                            None
                        {% endif %}
                    </p>
                    <p><strong>Quantity:</strong> {{ order.quantity }}</p>
                    <div class="d-flex justify-content-between mt-3">
                        <a href="{{ path('app_order_show', {'id': order.id}) }}" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> View
                        </a>
                        <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        {{ include('order/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
