{% extends 'base.html.twig' %}

{% block title %}Order Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Order #{{ order.id }}</h1>

    <p><strong>User:</strong> {{ order.user.firstName }} {{ order.user.lastName }}</p>
    <p><strong>Products:</strong> 
        {% if order.products|length > 0 %}
            {% for product in order.products %}
                {{ product.libelle }}{% if not loop.last %}, {% endif %}
            {% endfor %}
        {% else %}
            None
        {% endif %}
    </p>
    <p><strong>Quantity:</strong> {{ order.quantity }}</p>

    <div class="mt-4 text-center">
        <a href="{{ path('app_order_index') }}" class="btn btn-secondary">Back to list</a>
        <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn btn-warning">Edit Order</a>
        {{ include('order/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
