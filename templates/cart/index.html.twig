{% extends 'base.html.twig' %}

{% block title %}Carts{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Carts</h1>

    <div class="text-end mb-3">
        <a href="{{ path('app_cart_new') }}" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Create New Cart
        </a>
    </div>

    {% if carts is empty %}
        <p class="text-center text-muted">No carts found.</p>
    {% else %}
        <div class="row g-4">
            {% for cart in carts %}
            <div class="col-md-4">
                <div class="card p-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="card-title">Cart #{{ cart.id }}</h5>
                        <span class="badge bg-primary">Total: ${{ cart.totalPrice }}</span>
                    </div>
                    <p><strong>Owner:</strong> {{ cart.owner.username }}</p>
                    <p><strong>Products:</strong>
                        {% if cart.products|length > 0 %}
                            {{ cart.products|map(p => p.libelle)|join(', ') }}
                        {% else %}
                            None
                        {% endif %}
                    </p>
                    <div class="d-flex justify-content-between mt-3">
                        <a href="{{ path('app_cart_show', {'id': cart.id}) }}" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> View
                        </a>
                        <a href="{{ path('app_cart_edit', {'id': cart.id}) }}" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        {{ include('cart/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
