{% extends 'base.html.twig' %}

{% block title %}Carts{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">All Carts</h1>

    <div class="text-end mb-3">
        <a href="{{ path('app_cart_new') }}" class="btn btn-success btn-lg">Create New Cart</a>
    </div>

    {% if carts is empty %}
        <p class="text-center text-muted">No carts found.</p>
    {% else %}
        <div class="row g-4">
            {% for cart in carts %}
            <div class="col-md-4">
                <div class="card p-3">
                    <p><strong>ID:</strong> {{ cart.id }}</p>
                    <p><strong>Card Number:</strong> {{ cart.cardNumber }}</p>
                    <p><strong>Card Type:</strong> {{ cart.cardType }}</p>
                    <p><strong>Expiration Date:</strong> {{ cart.expirationDate ? cart.expirationDate|date('Y-m-d') : '' }}</p>
                    <p><strong>Owner:</strong> {{ cart.user ? cart.user.firstName ~ ' ' ~ cart.user.lastName : '' }}</p>
                    <div class="d-flex justify-content-between mt-3">
                        <a href="{{ path('app_cart_show', {'id': cart.id}) }}" class="btn btn-info btn-sm">Show</a>
                        <a href="{{ path('app_cart_edit', {'id': cart.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
