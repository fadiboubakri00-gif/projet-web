{% extends 'base.html.twig' %}

{% block title %}Edit Cart{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Edit Cart</h1>

    {{ form_start(form) }}

    <div class="row g-3">
        <div class="col-md-6">
            {{ form_label(form.cardNumber) }}
            {{ form_widget(form.cardNumber, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.cardNumber) }}
        </div>

        <div class="col-md-6">
            {{ form_label(form.cardType) }}
            {{ form_widget(form.cardType, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.cardType) }}
        </div>

        <div class="col-md-6">
            {{ form_label(form.expirationDate) }}
            {{ form_widget(form.expirationDate, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.expirationDate) }}
        </div>

        <div class="col-md-6">
            {{ form_label(form.user) }}
            {{ form_widget(form.user, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.user) }}
        </div>
    </div>

    <div class="mt-4 text-center">
        <button class="btn btn-warning btn-lg">Update Cart</button>
    </div>

    {{ form_end(form) }}

    <div class="mt-3 text-center">
        <a href="{{ path('app_cart_index') }}" class="btn btn-secondary">Back to list</a>
    </div>
</div>
{% endblock %}
