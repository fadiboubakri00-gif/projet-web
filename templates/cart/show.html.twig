{% extends 'base.html.twig' %}

{% block title %}Cart Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Cart Details</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cart.id }}</td>
            </tr>
            <tr>
                <th>Owner</th>
                <td>{{ cart.owner.username }}</td>
            </tr>
            <tr>
    <th>Total Price</th>
    <td>${{ cart.getTotalPrice() }}</td>
</tr>
<tr>
    <th>Number of Items</th>
    <td>{{ cart.getItemsCount() }}</td>
</tr>
            <tr>
                <th>Products</th>
                <td>
                    {% if cart.products|length > 0 %}
                        <ul class="list-unstyled">
                            {% for product in cart.products %}
                                <li>{{ product.libelle }} - ${{ product.price }}</li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        No products in cart
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <div class="mt-4 text-center">
        <a href="{{ path('app_cart_index') }}" class="btn btn-secondary me-2">
            <i class="bi bi-arrow-left"></i> Back to list
        </a>
        <a href="{{ path('app_cart_edit', {'id': cart.id}) }}" class="btn btn-primary me-2">
            <i class="bi bi-pencil"></i> Edit
        </a>
        {{ include('cart/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}