{% extends 'base.html.twig' %}

{% block title %}Show Product{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Product Details</h1>

    <div class="row g-3">
        <div class="col-md-6">
            <p><strong>Libelle:</strong> {{ product.libelle }}</p>
        </div>
        <div class="col-md-6">
            <p><strong>Price:</strong> ${{ product.price }}</p>
        </div>
        <div class="col-md-6">
            <p><strong>Description:</strong> {{ product.description ?: 'N/A' }}</p>
        </div>
        <div class="col-md-6">
            <p><strong>Category:</strong> {{ product.category ? product.category.name : 'N/A' }}</p>
        </div>
        <div class="col-md-6">
            <p><strong>Orders:</strong> {{ product.orders|length }}</p>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a href="{{ path('app_product_index') }}" class="btn btn-secondary">Back to list</a>
    </div>
</div>
{% endblock %}
