{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Products</h1>

    <div class="text-end mb-3">
        <a href="{{ path('app_product_new') }}" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Add New Product
        </a>
    </div>

    {% if products is empty %}
        <p class="text-center text-muted">No products found.</p>
    {% else %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Libelle</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Orders</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>{{ product.libelle }}</td>
                        <td>{{ product.price }}</td>
                        <td>{{ product.category ? product.category.name : '' }}</td>
                        <td>
                            {% if product.orders|length > 0 %}
                                {% for order in product.orders %}
                                    {{ order.user.firstName }} {{ order.user.lastName }}{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            {% else %}
                                No orders
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                            <form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" style="display:inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}
