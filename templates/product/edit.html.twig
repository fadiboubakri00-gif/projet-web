{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Edit Product</h1>

    {{ form_start(form) }}
    <div class="row g-3">
        <div class="col-md-6">{{ form_label(form.libelle) }} {{ form_widget(form.libelle) }} {{ form_errors(form.libelle) }}</div>
        <div class="col-md-6">{{ form_label(form.price) }} {{ form_widget(form.price) }} {{ form_errors(form.price) }}</div>
        <div class="col-md-6">{{ form_label(form.description) }} {{ form_widget(form.description) }} {{ form_errors(form.description) }}</div>
        <div class="col-md-6">{{ form_label(form.category) }} {{ form_widget(form.category) }} {{ form_errors(form.category) }}</div>
    </div>

    <div class="mt-4 text-center">
        <button class="btn btn-warning btn-lg">Update Product</button>
    </div>
    {{ form_end(form) }}

    <div class="mt-3 text-center">
        <a href="{{ path('app_product_index') }}" class="btn btn-secondary">Back to list</a>
    </div>
</div>
{% endblock %}
