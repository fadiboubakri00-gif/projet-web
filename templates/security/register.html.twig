{% extends 'base_user.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container mt-5" style="max-width: 400px;">
    <h1 class="text-center mb-4">Register</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    {{ form_start(registrationForm) }}

    <div class="mb-3">
        {{ form_row(registrationForm.username, {'attr': {'class':'form-control','placeholder':'Username'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(registrationForm.email, {'attr': {'class':'form-control','placeholder':'Email'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(registrationForm.plainPassword, {'attr': {'class':'form-control','placeholder':'Password'}}) }}
    </div>

    <button type="submit" class="btn btn-primary w-100">Register</button>

    {{ form_end(registrationForm) }}
</div>
{% endblock %}
