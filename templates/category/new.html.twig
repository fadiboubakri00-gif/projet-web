{% extends 'base.html.twig' %}

{% block title %}New Category{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Create New Category</h1>

    {{ form_start(form) }}
    <div class="row g-3">
        <div class="col-md-6">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter category name'}}) }}
            {{ form_errors(form.name) }}
        </div>
        <div class="col-md-12">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Enter description'}}) }}
            {{ form_errors(form.description) }}
        </div>
    </div>
    <div class="mt-4 text-center">
        <button class="btn btn-primary btn-lg">Save Category</button>
    </div>
    {{ form_end(form) }}

    <div class="mt-3 text-center">
        <a href="{{ path('app_category_index') }}" class="btn btn-secondary">Back to list</a>
    </div>
</div>
{% endblock %}
