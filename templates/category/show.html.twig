{% extends 'base.html.twig' %}

{% block title %}Category Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Category Details</h1>

    <div class="card p-4">
        <h5 class="card-title">{{ category.name }}</h5>
        <p><strong>Description:</strong> {{ category.description ?: 'No description' }}</p>
        <p><strong>Products:</strong>
            {% if category.products|length > 0 %}
                {{ category.products|map(p => p.libelle)|join(', ') }}
            {% else %}
                None
            {% endif %}
        </p>
    </div>

    <div class="mt-3 text-center">
        <a href="{{ path('app_category_index') }}" class="btn btn-secondary">Back to list</a>
        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning">Edit Category</a>
    </div>
</div>
{% endblock %}
