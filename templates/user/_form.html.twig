{{ form_start(form) }}
<div class="mb-4">
    {{ form_label(form.username, 'Username', {'label_attr': {'class': 'form-label fw-bold'}}) }}
    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.username) }}
</div>

<div class="mb-4">
    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label fw-bold'}}) }}
    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.email) }}
</div>

<div class="mb-4">
    {{ form_label(form.password, 'Password', {'label_attr': {'class': 'form-label fw-bold'}}) }}
    {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.password) }}
</div>

<div class="text-center">
    <button class="btn btn-primary btn-lg">
        <i class="bi bi-check-circle"></i> {{ button_label|default('Update') }}
    </button>
</div>
{{ form_end(form) }}